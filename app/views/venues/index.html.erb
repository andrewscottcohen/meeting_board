<div>
  <div>
    <h1>
      List of all venues
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new venue
    </h2>

    <form action="/insert_venue" method="post">
      <div>
        <label for="venue_box">
          Venue
        </label>

        <input type="text" id="venue_box" name="query_venue">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <button>
        Create venue
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Venue
        </th>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_venues.each do |a_venue| %>
      <tr>
        <td>
          <%= a_venue.id %>
        </td>

        <td>
          <%= a_venue.venue %>
        </td>

        <td>
          <%= a_venue.address %>
        </td>

        <td>
          <%= time_ago_in_words(a_venue.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_venue.updated_at) %> ago
        </td>

        <td>
          <a href="/venues/<%= a_venue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
